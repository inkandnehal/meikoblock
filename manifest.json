{
  "manifest_version": 3,
  "name": "MeikoBlock", 
  "version": "1.0.0",
  "description": "A custom, no-nonsense website blocker.",
  "permissions": [
    "storage", 
    "declarativeNetRequest",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "pages/popup.html",
    "default_title": "MeikoBlock",
    "default_icon": {
      "16": "assets/icon16.png" 
    }
  },
  "background": {
    "service_worker": "scripts/worker/background.js"
  }
}